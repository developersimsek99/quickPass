@model quickPassProject.Models.User
@{
    ViewBag.Title = "quickPass - Şifremi Unuttum";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}
<head>
    @if (ViewBag.MessageK == true)
    {
        <script type="text/javascript">
            window.onload = function () {
                toastr.info("@ViewBag.MessageI");
                toastr.success("@ViewBag.MessageS");
                window.onload = setTimeout('yonlendir()', 5500);
            };
        </script>

    }
    <script type="text/javascript">
        function yonlendir() {
            window.location.href = "https://localhost:44363/User/Login";
        }
    </script>
</head>
<div class="container mt-5">
    <div class="col-md-12 row text-center">
        <h3 style="color:#555;">Yeni bir şifre oluşturup mail hesabınıza göndereceğiz.</h3>
        <h5 style="color:#888;">Lütfen sistemde kayıtlı mail adresinizi girin. </h5>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel panel-heading text-center"><a href="/Home/Index"><img src="~/Image/IlkLogoKare.png" height="100" width="140" /></a></div>
                <div class="panel panel-body">

                    @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
                    {

                        @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @required = "", @type = "email", @placeholder = "Email" })
                        <br />
                        if (ViewBag.hata != null)
                        {
                            <div style="background-color:#fff3cd; height:40px; border-radius:5px;" class="text-center"><label style="color:#664d03; padding-top:7px;">@ViewBag.hata</label> </div> <br />
                        }
                        <div class="col-md-12 row">
                            <div class="col-md-2"></div>
                            <div class="col-md-8 text-center" style="margin-left:15px;">
                                <input type="submit" value="Gönder" class="btn btn-outline-success" />
                                <a class="btn btn-outline-warning" href="/User/Login">Vazgeç</a>
                            </div>
                            <div class="col-md-2"></div>

                        </div>
                    }

                </div>

            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

