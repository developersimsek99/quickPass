@model IEnumerable<quickPassProject.Models.ReportUs>
@{
    if (Session["isadmin"] == null)
    {
        Response.Redirect("/Home/Page404");
    }
    ViewBag.Title = "quickPass - Öneri/Şikâyet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-md-12 row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        @item.Name @item.Surname
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>@item.Content</p> <br />
                            <footer class="blockquote-footer" style="font-size:15px;"><i class="fas fa-envelope-alt"></i> <cite title="Source Title"><b>@item.Email</b> </cite> tarafından <cite title="Source Title"><i class="far fa-clock"></i> <b>@item.Time</b></cite> tarihinde gönderildi. <br /> <br />
                            <div class="col-md-12 row">
                                <div class="col-md-5"></div>
                                <div class="col-md-4"></div>
                                <div class="col-md-3">   
                                    <a class="btn btn-warning" style="color:white;" href="/Admin/Delete/@item.id"><i class="fas fa-trash"></i></a> <a class="btn btn-danger" href="">X</a> <a class="btn btn-success" href="">✓</a>
                                </div>
                            </div>
                            </footer>
                        </blockquote>
                    </div>
                </div> <br />
            }


        </div>
            <div class="col-md-2"></div>
        </div>

    </div>

